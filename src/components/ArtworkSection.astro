---
import Spacer from './Spacer.astro'

interface Props {
  backgroundColor?: string
}

const { backgroundColor = 'bg-white' } = Astro.props
---

<div
  class=`flex justify-center ${backgroundColor} w-full artwork-section min-h-[768px]`
>
  <div class="px-4 lg:px-12 py-4 lg:py-6 xl:py-8 w-full lg:w-3/4 items-center">
    <Spacer variant="xs" />
    <slot />
  </div>
</div>
